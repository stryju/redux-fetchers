{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "outDir": "lib",
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "sourceMap": false,
    "inlineSourceMap": true,
    "noEmitHelpers": true
  },
  "files": [
    "./index.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
